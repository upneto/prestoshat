package br.com.prestoshat.persistence.model.constants;

import lombok.Getter;

@Getter
public enum TipoModoJogo {

	A_INICIAR(1, "A INICIAR"),
	JOGANDO(2, "JOGANDO"),
	FINALIZADO(3, "FINALIZADO");
	
	private int id;
	private String descricao;
	
	private TipoModoJogo(int id, String descricao) {
		this.id = id;
		this.descricao = descricao;
	}
	
	public static TipoModoJogo getBy(String descricao) {
		TipoModoJogo tipo = null;
		for(TipoModoJogo item : TipoModoJogo.values()) {
			if(item.getDescricao().equalsIgnoreCase(descricao)) {
				tipo = item;
				break;
			}
		}
		return tipo;
	}
	
	public static TipoModoJogo getBy(int id) {
		TipoModoJogo tipo = null;
		for(TipoModoJogo item : TipoModoJogo.values()) {
			if(item.getId() == id) {
				tipo = item;
				break;
			}
		}
		return tipo;
	}
}
