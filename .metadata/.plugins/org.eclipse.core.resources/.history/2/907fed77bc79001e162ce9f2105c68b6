package br.com.prestoshat.persistence.model.constants;

import lombok.Getter;

@Getter
public enum TipoGenero {

	FIGHTING(4, "Fighting"),
	SHOOTER(5, "Shooter"),
	MUSIC(7, "Music"),
	PLATFORM(8, "Platform"),
	PUZZLE(9, "Puzzle"),
	RACING(10, "Racing"),
	RTS(11, "Real Time Strategy (RTS)"),
	RPG(12, "Role-playing (RPG)"),
	SIMULATOR(13, "Simulator"),
	SPORT(14, "Sport");
		
	private int id;
	private String descricao;
	
	private TipoGenero(int id, String descricao) {
		this.id = id;
		this.descricao = descricao;
	}
	
	public static TipoGenero getBy(String descricao) {
		TipoGenero tipo = null;
		for(TipoGenero item : TipoGenero.values()) {
			if(item.descricao.equalsIgnoreCase(descricao)) {
				tipo = item;
				break;
			}
		}
		return tipo;
	}
	
	public static TipoGenero getBy(int id) {
		TipoGenero tipo = null;
		for(TipoGenero item : TipoGenero.values()) {
			if(item.id == id) {
				tipo = item;
				break;
			}
		}
		return tipo;
	}
}
